@model IEnumerable<Blogoss.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                    <div class="d-flex justify-content-around">
                        <a asp-action="Edit" class="btn btn-warning btn-space" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" class="btn btn-success btn-space" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" class="btn btn-danger hover-scale btn-space" asp-route-id="@item.Id">Delete</a>
                    </div>
                    
            </td>
        </tr>
}
    </tbody>
</table>
